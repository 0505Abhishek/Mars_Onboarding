<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Distributor Lifecycle Program - Login</title>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />

    <style>
      body {
        background-color: #1a237e;
        color: white;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        height: 100vh;

        background-image: url('../../public/images/Screenshot 2025-03-10 153330.png');

       

        overflow: hidden;

        background-size: 100% 80%;
        width: 100%;

        background-position: center;
        background-repeat: repeat-x;
      }
      .header {
       
        text-align: center;
        padding-top: 5px;
      }
      .center {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
      }

      .background-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover; /* Ensures image covers the entire div */
        z-index: -1; /* Puts image behind other content */
      }

      .login-container {
        color: white;
        border: 2px solid white;
        border-radius: 2.5rem;
        padding: 2rem;
        width: 25rem;
        margin-top:-100px;
      }
      .form-control:focus {
        box-shadow: none;
        border-color: white;
      }
      .form-control[readonly] {
        background-color: transparent;
        border: none;
        border-bottom: 2px solid white;
        color: white;
      }
      .btn-login {
        background-color: white;
        color: #00008b;
        font-weight: bold;
        border-radius: 1.5rem;
      }
      .forgot-password {
        color: #ffd700;
      }
      .input-group-text {
        background-color: transparent;
        border: none;
        color: white;
      }

      .footer {

        position: fixed;
        bottom: 0px;
        background-color: #ffff;
        margin: 0  auto;
        width: 100%;

        text-align: center;
      }

      .footer img {
        max-width: 100px;
        height: auto;
      }

      .form-control {
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.5);
        color: white;
      }

      .form-control::placeholder {
        color: rgba(255, 255, 255, 0.7);
      }

      .form-control:focus {
        background: transparent;
        color: white;
        border-color: white;
        outline: none;
        box-shadow: none;
      }

      .col-9 {
        position: relative;
        text-align: center;
      }

      .logo-img {
        width: 250px;
        height: auto;
        transition: all 0.3s ease-in-out;
      }

      .logo-img1 {
        position: relative; 
        z-index: 1;
      }

      /* Text Overlay */
      .text-overlay {
        position: absolute;
        top: 50%;
        left: 42%;
        transform: translate(-50%, -50%);
        color: white;
        font-size:40px;
        font-weight: bold;
        text-align: center;
        z-index: 2; /* Ensure text is above the image */
      }

      @media (max-width: 992px) {
        .header {
          padding-top: 15px;
        }
        .logo-img {
          width: 120px;
        }
        .text-overlay {
          font-size: 1.8rem;
        }
        .login-container {
          width: 22rem;
        }
        .footer {
          flex-wrap: wrap;
          gap: 10px;
        }
        .footer img {
          max-width: 80px;
        }
      }

      @media (max-width: 768px) {
        .logo-img {
          width: 100px;
        }
        .text-overlay {
          font-size: 1.5rem;
        }
        .login-container {
          width: 20rem;
          padding: 1.5rem;
        }
        .background-image {
          object-fit: cover;
          height: 100%;
        }
        .footer {
          flex-wrap: wrap;
          justify-content: center;
        }
        .footer img {
          max-width: 70px;
        }
      }

      @media (max-width: 576px) {
        .header {
          padding-top: 10px;
        }
        .logo-img {
          width: 80px;
        }
        .text-overlay {
          font-size: 1.2rem;
        }
        .login-container {
          width: 18rem;
          padding: 1rem;
        }
        .footer img {
          max-width: 60px;
        }
      }
    </style>
  </head>

  <body>
  <!-- Header -->
  <div class="header">
    <div
      class="row align-items-center custom-row position-relative"
      style="width: 100%"
    >
      <div
        class="col-2 d-flex justify-content-start"
        style="margin-top: -30px; margin-left: 30px"
      >
        <img
          src="../../public/images/mars-wrigley-logo-white.png"
          alt="top image"
          class="logo-img"
        />
      </div>
      <div class="col-8 position-relative">
        <img
          src="../../public/images/Rectangle 3022.svg"
          alt="top image"
          class="logo-img1 w-100"
        />
        <h2 class="text-overlay">Distributor Lifecycle Program</h2>
      </div>
    </div>
  </div>

  <div class="center">
    <form class="login-container text-center" id="loginForm">
      <h2 style="font-weight: bold" class="mb-4">User Log In</h2>

      <div class="mb-3 text-start">
        <label for="email" class="form-label">
          <i class="fas fa-envelope me-2"></i>Email
        </label>
        <div class="input-group">
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            placeholder="Johnsondoe@nomail.com"
            required
          />
        </div>
      </div>

      <div class="mb-3 text-start">
        <label for="password" class="form-label">
          <i class="fas fa-lock me-2"></i>Password
        </label>
        <div class="input-group">
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            required
          />
        </div>
      </div>

      <div class="mb-4 text-end">
        <a href="/reset-password" class="forgot-password">Forgot Password?</a>
      </div>

      <button type="submit" class="btn btn-login w-100">LOGIN</button>
    </form>
  </div>

  <div class="footer">
    <img src="../images/snickers.jpg" alt="img" class="img-fluid" />
    <img src="../images/twix.jpg" alt="img" class="img-fluid" />
    <img src="../images/doublemint.jpg" alt="img" class="img-fluid" />
    <img src="../images/boomer.jpg" alt="img" class="img-fluid" />
    <img src="../images/glaxy.jpg" alt="img" class="img-fluid" />
    <img src="../images/orbit.jpg" alt="img" class="img-fluid" />
    <img src="../images/mars.jpg" alt="img" class="img-fluid" />
  </div>
</body>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
    document.getElementById("loginForm").addEventListener("submit", async function (event) {
        event.preventDefault(); // Prevent default form submission
    
        let email = document.getElementById("email").value;
        let password = document.getElementById("password").value;
    
        if (!email || !password) {
            Swal.fire({
                toast: true,
                position: "top-start",
                icon: "warning",
                title: "Please fill in all fields!",
                showConfirmButton: false,
                timer: 3000,
                timerProgressBar: true,
            });
            return;
        }
    
        try {
            let response = await fetch("/user-login", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ email, password }), 
            });
    
            let result = await response.json();
    
            if (response.ok) {
                Swal.fire({
                    toast: true,
                    position: "top-start",
                    icon: "success",
                    title: result.message,
                    showConfirmButton: false,
                    timer: 2000,
                    timerProgressBar: true,
                });
    
                setTimeout(() => {
                    window.location.href = "/dashboard"; // Redirect after alert
                }, 2000);
            } else {
                Swal.fire({
                    toast: true,
                    position: "top-start",
                    icon: "error",
                    title: result.message,
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true,
                });
            }
        } catch (error) {
            Swal.fire({
                toast: true,
                position: "top-start",
                icon: "error",
                title: "Something went wrong! Please try again.",
                showConfirmButton: false,
                timer: 3000,
                timerProgressBar: true,
            });
        }
    });
  </script>
 
  <script>
    let notification = "<%= notification %>";
    if (notification) {
        Swal.fire({
            toast: true,
            position: "top-start",
            icon: "info",
            title: notification,
            showConfirmButton: false,
            timer: 3000,
            timerProgressBar: true,
        });
    }
  </script>

</html>
