                                <tbody>
                                    <% const documents = {
                                        crf_form: distributor.crf_form,
                                        gst_certificate: distributor.gst_certificate,
                                        fssai_certificate: distributor.fssai_certificate,
                                        pan_card: distributor.pan_card,
                                        cancelled_cheque: distributor.cancelled_cheque,
                                        db_agreement: distributor.db_agreement,
                                        godown_insurance: distributor.godown_insurance,
                                        rsm_email_approval: distributor.rsm_email_approval,
                                    };
                                
                                    if (distributor.applicationType === "replacement") {
                                        documents.replacement_noc = distributor.replacement_noc;
                                    }
                                
                                    if (distributor.dbType === "Hub") {
                                        documents.freight_sheet = distributor.freight_sheet;
                                    }
                                
                                    if (distributor.dbType === "Credit") {
                                        documents.bank_statement = distributor.bank_statement;
                                    }
                                
                                    documents.fssai_amendment_copy = distributor.fssai_amendment_copy;
                                    %>
                                
                                    <% for (let key in documents) { %>
                                        <tr>
                                            <td><%= key.replace(/_/g, ' ').toUpperCase() %></td>
                                            <td class="custom-width">
                                                <% if (documents[key]) { 
                                                    let fileUrl = "/uploads/" + documents[key];
                                                    let fileType = documents[key].endsWith(".pdf") ? "pdf" : "image"; 
                                                %>
                                                    <a href="#" class="view-icon" data-url="<%= fileUrl %>" data-type="<%= fileType %>" style="text-decoration:none;">
                                                        👁
                                                    </a>
                                                <% } else { %>
                                                    <span style="color: red;">No Image</span>
                                                <% } %>
                                            </td>                                            
                                            <td><input type="text" class="form-control" id="<%= key %>" placeholder="Enter remark"></td>
                                            <td><input type="checkbox" id="<%= key %>Check"></td>
                                        </tr>
                                    <% } %>
                                </tbody>
                                
                            </table>
                        </form>
